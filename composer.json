{
    "name": "niiknow/anx-api-proxy",
    "description": "AppNexus Proxy API",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2",
        "darkaonline/l5-swagger": "^6.0",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.3.3",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0",
        "league/csv": "^9.1",
        "league/flysystem-aws-s3-v3": "^1.0",
        "yajra/laravel-datatables-oracle": "~9.0",
        "zircote/swagger-php": "^3.0",
        "niiknow/laratt": "^1.6",
        "f3ath/appnexus": "^0.4.0",
        "rachidlaasri/laravel-installer": "^4.0",
        "facebook/php-business-sdk": "^6.0"
    },
    "require-dev": {
        "facade/ignition": "^1.4",
        "beyondcode/laravel-dump-server": "^1.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Api\\": "api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf -w",
        "app:clear": [
            "rm -f dist.zip",
            "rm -f bootstrap/cache/config.php",
            "rm -f storage/framework/sessions/*",
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "composer dump-autoload"
        ],
        "app:package": [
            "composer app:clear",
            "npm run production",
            "composer update",
            "deployStash=`git stash create`; git archive --worktree-attributes --format=zip -o dist.zip ${deployStash:-HEAD}",
            "zip -ur dist.zip ./vendor"
        ],
        "app:production": [
            "composer app:clear",
            "chmod -R 775 storage/framework/",
            "chmod -R 775 storage/logs/",
            "chmod -R 775 bootstrap/cache/",
            "echo 'composer install --no-dev --optimize-autoloader'"
        ],
        "docker:clear": [
            "rm -rf .docker/data/mysql/*",
            "rm -rf .docker/logs/*"
        ],
        "auto-complete:generate": [
            "php artisan ide-helper:meta",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    }
}
